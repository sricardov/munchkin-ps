abstract class Baralho {
  # baralho: Carta[]
  # descarte: Carta[]
  + iniciarDeck()
  + embaralhar(baralho: Carta[])
  + comprar(): Carta
  + descartar(carta: Carta)
  + verTopoDescarte(): Carta | null
  + verTopoBaralho(): Carta | null
  + estaVazio(): boolean
